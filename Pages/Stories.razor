@page "/stories"

@using SudaTales.Models
@inject StoryRepository StoryRepo

<h1>Stories</h1>

@if (_stories is null)
{
    <p>Loading…</p>
}
else if (_stories.Count == 0)
{
    <p>No stories available.</p>
}
else
{
    <div class="stories-list">
        @foreach (var story in _stories)
        {
            <article class="story-card">
                <h2>
                    <a href="/stories/@story.Slug">
                        @story.Title
                    </a>
                </h2>

                <div class="story-meta">
                    @if (!string.IsNullOrWhiteSpace(story.Author))
                    {
                        <span>By @story.Author</span>
                    }

                    @if (!string.IsNullOrWhiteSpace(story.Language))
                    {
                        <span>• @story.Language</span>
                    }

                    <span>• @story.Chapters.Count chapter(s)</span>
                </div>

                @if (!string.IsNullOrWhiteSpace(story.Summary))
                {
                    <p class="summary">@story.Summary</p>
                }
            </article>
        }
    </div>
}

@code {
    private List<StoryModel>? _stories;

    protected override async Task OnInitializedAsync()
    {
        _stories = await StoryRepo.GetAllAsync();
    }
}
